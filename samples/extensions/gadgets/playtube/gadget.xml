<Module>
 <ModulePrefs
  title="Youtube Co-Viewer"
  height="650"
  description="Find a video on Youtube and watch it at the same time as other participants."
  author="Pamela Fox"
  author_email="pamelafox@google.com">
  <Require feature="wave"/>
 </ModulePrefs>
 <Content type="html">
<![CDATA[

<a style="display:none" id="picker-trigger" href="#" rel="#picker"></a>

<div id="picker" class="overlay">
 <div id="picker-header">
  <img src="http://google-wave-resources.googlecode.com/svn/trunk/samples/extensions/gadgets/playtube/youtubelogo.png">
  <input id="search-input" type="text" placeholder="e.g. fox, robyn">
  <button id="search-button">Search</button>
 </div>
 <div id="picker-results"></div>
</div>

<div id="player" style="display:none">
  <div id="player-header">
    <div id="player-link">Tired of this video? <button>Find a new one.</button></div>
    <div id="player-nowplaying"></div>
  </div>
  <div id="player-ytapiplayer"></div>
  <div id="player-control-container">
    <div id="player-control" class="control-button play"></div>
    <div id="player-volume-button" class="control-button">
      <div id="player-volume"></div>
    </div>
    <div id="player-progressbar-container">
      <div id="player-progressbar" class="progress-bar">
        <div id="player-elapsedbar" class="elapsed"></div>
      </div>
    </div>
  </div>
  <div id="player-time"></div>
</div>
<div id="ptt-button" class="up"></div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<script src="https://Kajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"></script>
<script src="http://sharedspaces.googlelabs.com/static/av.js"></script>
<script src="http://google-wave-resources.googlecode.com/svn/trunk/samples/extensions/gadgets/playtube/util.js"></script>
<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/themes/base/jquery-ui.css" type="text/css" />
<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/smoothness/jquery-ui.css" type="text/css" />
<link href="http://google-wave-resources.googlecode.com/svn/trunk/samples/extensions/gadgets/playtube/styles.css" rel="stylesheet" type="text/css"/>
<script src="http://google-wave-resources.googlecode.com/svn/trunk/samples/extensions/gadgets/playtube/gadget.js"></script>
]]></Content>
</Module>

